<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-sm-8">
		<h3>
		  <%= @article.title %>
		</h3>
		<small class="text-muted"><%= @article.count %> Total views</small>,&nbsp;<small class="text-muted"><%= @article.comments.count %> Comments</small>

		<p>
		  <%= @markdown.render(@article.body).html_safe %>
		</p>

		<hr/>

		<h3>Leave a Reply</h3>
		<%= render 'comments/form' %>

		<ul class="comment-list">
			<%= render @article.comments %>
		</ul>
	  	
	</div>
</div>

<br/>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
